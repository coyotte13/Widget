    <title>Formulaire d'Idée</title>
    <style>
        body {
            color: white;
            background-color: black; /* Ajout d'un fond noir pour mieux voir le texte blanc */
        }
        h2 {
            color: white;
        }
    </style>
</head>
<body>
    <h2>Soumettre une idée</h2>
    <form id="monFormulaire" action="https://hook.eu2.make.com/avvywjltgngd2ail8nuxywffyp5eg9il" method="post">
        <label for="idee">Votre Idée:</label><br>
        <input type="text" id="idee" name="idee" required><br><br>
        <input type="submit" value="Envoyer">
    </form>

    <script>
        document.getElementById('monFormulaire').onsubmit = function() {
            // Utilisation de Fetch API pour envoyer les données du formulaire
            fetch('https://hook.eu2.make.com/avvywjltgngd2ail8nuxywffyp5eg9il', {
                method: 'POST',
                body: new FormData(document.getElementById('monFormulaire')),
            }).then(response => {
                console.log('Formulaire envoyé');
                // Recharge le formulaire après l'envoi
                document.getElementById('monFormulaire').reset();
            });
            // Empêche le rechargement complet de la page
            return false;
        };
    </script>
</body>
